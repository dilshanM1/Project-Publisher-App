<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_ckground">

<TextView
    android:id="@+id/editTxtId"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Edit"
    android:textSize="20dp"
    android:layout_centerHorizontal="true" />
    <View
        android:id="@+id/Line1Id"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/editTxtId"
        android:layout_marginTop="10dp"
        android:background="#494646" />
    <TextView
        android:id="@+id/deleteTxtId"
        android:layout_below="@id/editTxtId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:textColor="#F60202"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <View
        android:id="@+id/LineId"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/deleteTxtId"
        android:layout_marginTop="10dp"
        android:background="#494646" />
    <TextView
        android:id="@+id/cancelTxtId"
        android:layout_below="@id/deleteTxtId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

</RelativeLayout>